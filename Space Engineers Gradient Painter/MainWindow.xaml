<Window x:Class="Space_Engineers_Gradient_Painter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Space_Engineers_Gradient_Painter"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <StackPanel>
                <StackPanel Name="ShipList" />
                <Frame Name="ShipEditor" Visibility="Collapsed" NavigationUIVisibility="Hidden" Navigating="ShipEditor_Navigating" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
